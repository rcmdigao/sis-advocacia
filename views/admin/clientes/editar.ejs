<%- include ('../../partials/header.ejs'); %>

<div class="container">
  <br />
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Editar Cliente</li>
  </ol>

  <div class="alert alert-success" id="acerto" style="display:none;"><strong>Cliente atualizado com <strong>sucesso!</strong></div>
  <div class="alert alert-danger"  id="erro" style="display:none;"><strong>Erro! O administrador já foi avisado!</strong></div> 

  <div class="row justify-content-center" style="margin-top:-55px">
    <div class="col-lg-12">
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-body">
          <form name="frm" id="frm" method="POST">
              <input type="hidden" name="id" value="<%= cliente.id %>">
            <div class="form-row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="small mb-1" for="nome">Nome</label
                  ><input
                    class="form-control py-4"
                    name="nome"
                    id="nome"
                    type="text"
                    required
                    value="<%= cliente.nome %>"
                  />
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="small mb-1" for="inputLastName">Email</label
                  ><input
                    class="form-control py-4"
                    name="email"
                    id="email"
                    type="text"
                    required
                    value="<%= cliente.email %>"
                  />
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="small mb-1" for="inputPassword">Tipo Pessoa</label>
                  <select class="form-control" id="tipo_pessoa" name="tipo_pessoa" required style="padding: 23px;">
                    <option value="Pessoa Física" <% if (cliente.tipopessoa == "Pessoa Física") { %> selected <% } %>>Pessoa Física</option>
                    <option value="Pessoa Jurídica" <% if (cliente.tipopessoa == "Pessoa Jurídica") { %> selected <% } %>>Pessoa Jurídica</option>
                  </select>
                </div>
              </div>
              <div class="col-md-6">

                <div class="form-group" id="divcpf" <% if (cliente.tipopessoa != "Pessoa Física") { %> style="display: none;" <% } %>>
                  <label class="small mb-1" >CPF</label>
                  <input
                    class="form-control py-4"
                    name="cpf"
                    id="cpf"
                    type="text"
                    <% if (cliente.tipopessoa == "Pessoa Física") { %> value="<%= cliente.cpf_cnpj %>" <% } %>/>
                </div>

                <div class="form-group" id="divcnpj2" <% if (cliente.tipopessoa != "Pessoa Jurídica") { %> style="display: none;" <% } %>>
                  <label class="small mb-1">CNPJ</label>
                  <input
                    class="form-control py-4"
                    name="cnpj"
                    id="cnpj"
                    type="text"
                    <% if (cliente.tipopessoa == "Pessoa Jurídica") { %> value="<%= cliente.cpf_cnpj %>" <% } %>/>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="small mb-1" for="telefone">Telefone</label>
                  <input
                    class="form-control py-4"
                    name="telefone"
                    id="telefone"
                    type="text"
                    required
                    value="<%= cliente.telefone %>"/>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="small mb-1" for="cep">CEP</label><input
                    class="form-control py-4"
                    name="cep"
                    id="cep"
                    type="text"
                    required
                    value="<%= cliente.cep %>"
                  />
                </div>
              </div>
            </div>


            <div class="form-row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="small mb-1" for="rua">Rua</label
                    ><input
                      class="form-control py-4"
                      name="rua"
                      id="rua"
                      type="text"
                      required
                      value="<%= cliente.rua %>"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="small mb-1" for="bairro"
                      >Bairro</label
                    ><input
                      class="form-control py-4"
                      name="bairro"
                      id="bairro"
                      type="text"
                      required
                      value="<%= cliente.bairro %>"
                    />
                  </div>
                </div>
              </div>



              <div class="form-row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="small mb-1" for="cidade">Cidade</label
                    ><input
                      class="form-control py-4"
                      name="cidade"
                      id="cidade"
                      type="text"
                      value="<%= cliente.cidade %>"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="small mb-1" for="uf"
                      >Estado</label
                    ><input
                      class="form-control py-4"
                      name="uf"
                      id="uf"
                      type="text"
                      required
                      value="<%= cliente.estado %>"
                    />
                  </div>
                </div>
              </div>

            <div class="form-group mt-4 mb-0" style="float: right;">
                <button name="Salvar" id="Salvar" class="btn btn-primary">Salvar</button>
                <a href="/clientes/listar"  class="btn btn-danger">Voltar</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("#tipo_pessoa").change(function () {
    var select = document.getElementById("tipo_pessoa");
    var value = select.options[select.selectedIndex].value;

    if (value == "Pessoa Jurídica") {
      $("#divcpf").hide();
      document.getElementById("divcnpj2").style.display = "block";
    } else {
      $("#divcpf").show();
      document.getElementById("divcnpj2").style.display = "none";
      document.getElementById('cnpj').value = "";
    }
  });
</script>
<script>
    $(document).ready(function() {

        function limpa_formulário_cep() {
            // Limpa valores do formulário de cep.
            $("#rua").val("");
            $("#bairro").val("");
            $("#cidade").val("");
            $("#uf").val("");
            $("#ibge").val("");
        }
        
        //Quando o campo cep perde o foco.
        $("#cep").blur(function() {

            //Nova variável "cep" somente com dígitos.
            var cep = $(this).val().replace(/\D/g, '');

            //Verifica se campo cep possui valor informado.
            if (cep != "") {

                //Expressão regular para validar o CEP.
                var validacep = /^[0-9]{8}$/;

                //Valida o formato do CEP.
                if(validacep.test(cep)) {

                    //Preenche os campos com "..." enquanto consulta webservice.
                    $("#rua").val("...");
                    $("#bairro").val("...");
                    $("#cidade").val("...");
                    $("#uf").val("...");
                    $("#ibge").val("...");

                    //Consulta o webservice viacep.com.br/
                    $.getJSON("https://viacep.com.br/ws/"+ cep +"/json/?callback=?", function(dados) {

                        if (!("erro" in dados)) {
                            //Atualiza os campos com os valores da consulta.
                            $("#rua").val(dados.logradouro);
                            $("#bairro").val(dados.bairro);
                            $("#cidade").val(dados.localidade);
                            $("#uf").val(dados.uf);
                            $("#ibge").val(dados.ibge);
                        } //end if.
                        else {
                            //CEP pesquisado não foi encontrado.
                            limpa_formulário_cep();
                            alert("CEP não encontrado.");
                        }
                    });
                } //end if.
                else {
                    //cep é inválido.
                    limpa_formulário_cep();
                    alert("Formato de CEP inválido.");
                }
            } //end if.
            else {
                //cep sem valor, limpa formulário.
                limpa_formulário_cep();
            }
        });
    });
</script>


<script type="text/javascript">
    jQuery(document).ready(function(){
        var situacao;
                    jQuery('#frm').submit(function(e){
                        e.preventDefault();
                        var serializeDados = jQuery(this).serialize();    
                        jQuery.ajax({
                            url: '/clientes/update',
                            type: 'POST',
                            data: serializeDados,
                            dataType: 'json',
                            success: function(response)
                            {
                            	if (response.situacao == 1) {	                                            					
                            	    document.getElementById("acerto").style.display = "block";
                                    alert("Sucesso! \nCliente atualizado com sucesso.");
                            		document.getElementById("frm").reset();
                            	} else if (response.situacao == 2) {
                            	   document.getElementById("erro").style.display = "block";
                            	   document.getElementById("frm").reset();
                                }
                            }
                        });
                    });
                }) 


</script>



