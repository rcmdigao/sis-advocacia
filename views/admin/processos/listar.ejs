<%- include ('../../partials/header.ejs'); %>

<div class="container-fluid">
    <br>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1" style="margin-top: 13px;"></i> Processos 
            <!--a href="/processos/novo" class="btn btn-primary" style="float: right;">Novo Processo</a-->
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>PROCESSO</th>
                            <th>VARA</th>
                            <th>TIPO</th>
                            <th>CLIENTE</th>
                            <th>STATUS</th>
                            <th>AÇÕES</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% processos.forEach(processo => { %>
                        <tr>
                            <td><%= processo.nome %></td>
                            <td><%= processo.telefone %></td>
                            <td><%= processo.email %></td>
                            <td><%= processo.tipopessoa %></td>
                            <td>
                                <a href="<%= processo.id %>"><i class="fas fa-edit text-info"></i></a>
                                <a href="<%= processo.id %>"><i class="far fa-trash-alt text-danger"></i></a>
                                <a href="<%= processo.id %>"><i class="fas fa-folder-open text-success ml-1"></i></a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





<%- include ('../../partials/footer.ejs'); %>
